{
  "mcpServers": {
    "taskflow": {
      "command": "npx",
      "args": ["-y", "@pinkpixel/taskflow-mcp"],
      "env": {
        "TASK_MANAGER_FILE_PATH": "/path/to/tasks.json",
        "TASK_MANAGER_BASE_DIR": "/optional/custom/base/directory",
        "ARCHIVE_FILE_PATH": "/path/to/tasks-archive.json",
        "ARCHIVE_MODE": "manual"
      }
    }
  }
}
